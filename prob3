#include<iostream>
#include<conio.h>
#include<string.h>
using namespace std;

int main ()
{

	int size;
	char in[100], out[100];
	
	cout << "Enter any combination of characters: ";
	cin >> in;
	
	size = strlen(in);
	
	for (int x = 0, y = size ; x <= size ; x++, y--)
    	{
        	 out[y] = in[x];
    	}
    	
    cout << "\n" << endl;
    	
    for (int x=0 ; x<= size ; x++)
    {
        cout << out[x] << ' ';
    }
    
    cout << "\n\nThe size of array is: " << size;
    
	getch();
	return 0;	
}
